{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kitn Registry Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "description"],
        "properties": {
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["kitn:agent", "kitn:tool", "kitn:skill", "kitn:storage"]
          },
          "description": { "type": "string" },
          "registryDependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "categories": {
            "type": "array",
            "items": { "type": "string" }
          },
          "version": { "type": "string" }
        }
      }
    }
  }
}
