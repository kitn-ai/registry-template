{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kitn Registry Item",
  "type": "object",
  "required": ["name", "type", "description", "files"],
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string", "description": "Unique component identifier" },
    "type": {
      "type": "string",
      "enum": ["kitn:agent", "kitn:tool", "kitn:skill", "kitn:storage"]
    },
    "description": { "type": "string" },
    "version": { "type": "string", "default": "1.0.0" },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "npm package dependencies"
    },
    "devDependencies": {
      "type": "array",
      "items": { "type": "string" }
    },
    "registryDependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other kitn components this depends on"
    },
    "envVars": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Required env vars with setup instructions"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "content", "type"],
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["kitn:agent", "kitn:tool", "kitn:skill", "kitn:storage"]
          }
        }
      }
    },
    "docs": { "type": "string", "description": "Post-install instructions" },
    "categories": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
